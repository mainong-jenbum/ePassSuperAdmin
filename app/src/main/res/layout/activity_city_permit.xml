<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id = "@+id/srl_city_permit"
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:paddingTop = "8dp">

        <androidx.core.widget.NestedScrollView
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:fillViewport = "true">

            <RelativeLayout
                android:layout_width = "match_parent"
                android:layout_height = "match_parent">

                <LinearLayout
                    android:id = "@+id/ll_top_view"
                    android:layout_width = "match_parent"
                    android:layout_height = "wrap_content"
                    android:orientation = "vertical">

                    <TextView
                        android:id = "@+id/tv_city_name"
                        android:layout_width = "match_parent"
                        android:layout_height = "wrap_content"
                        android:layout_marginStart = "16dp"
                        android:layout_marginTop = "16dp"
                        android:fontFamily = "sans-serif-condensed-medium"
                        android:text = "BORDUMSA"
                        android:textAllCaps = "true"
                        android:textAppearance = "@style/TextAppearance.AppCompat.Large" />

                    <LinearLayout
                        android:layout_width = "match_parent"
                        android:layout_height = "wrap_content"
                        android:layout_marginStart = "16dp"
                        android:layout_marginEnd = "16dp"
                        android:gravity = "center_horizontal"
                        android:orientation = "horizontal">

                        <TextView
                            android:id = "@+id/tv_total_active_permits"
                            android:layout_width = "wrap_content"
                            android:layout_height = "wrap_content"
                            android:fontFamily = "sans-serif-condensed"
                            android:text = "0"
                            android:textAppearance = "@style/TextAppearance.AppCompat.Display3"
                            android:textColor = "@android:color/black" />

                        <TextView
                            android:layout_width = "wrap_content"
                            android:layout_height = "wrap_content"
                            android:layout_gravity = "center_vertical"
                            android:layout_marginStart = "8dp"
                            android:text = "TOTAL\nACTIVE"
                            android:textAppearance = "@style/TextAppearance.AppCompat.Small"
                            android:textColor = "@android:color/black" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width = "match_parent"
                        android:layout_height = "wrap_content"
                        android:layout_marginStart = "56dp"
                        android:layout_marginTop = "24dp"
                        android:background = "@drawable/bg_permit_status"
                        android:minHeight = "160dp"
                        android:orientation = "horizontal"
                        android:padding = "36dp">

                        <LinearLayout
                            android:id = "@+id/ll_new_req"
                            android:layout_width = "0dp"
                            android:layout_height = "match_parent"
                            android:layout_weight = "1"
                            android:gravity = "center"
                            android:orientation = "vertical">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width = "36dp"
                                android:layout_height = "36dp"
                                android:src = "@drawable/ic_new_req"
                                app:tint = "@android:color/white" />

                            <TextView
                                android:id = "@+id/tv_total_new_requests"
                                android:layout_width = "wrap_content"
                                android:layout_height = "wrap_content"
                                android:layout_marginTop = "16dp"
                                android:text = "0"
                                android:textAppearance = "@style/TextAppearance.AppCompat.Display1"
                                android:textColor = "@android:color/white" />

                            <TextView
                                android:layout_width = "wrap_content"
                                android:layout_height = "wrap_content"
                                android:layout_marginTop = "16dp"
                                android:text = "NEW REQ"
                                android:textAppearance = "@style/TextAppearance.AppCompat.Small"
                                android:textColor = "@android:color/white" />

                        </LinearLayout>

                        <LinearLayout
                            android:id = "@+id/ll_expired_req"
                            android:layout_width = "0dp"
                            android:layout_height = "match_parent"
                            android:layout_weight = "1"
                            android:gravity = "center"
                            android:orientation = "vertical">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width = "36dp"
                                android:layout_height = "36dp"
                                android:src = "@drawable/ic_exp_req"
                                app:tint = "@android:color/white" />

                            <TextView
                                android:id = "@+id/tv_total_expired_req"
                                android:layout_width = "wrap_content"
                                android:layout_height = "wrap_content"
                                android:layout_marginTop = "16dp"
                                android:text = "0"
                                android:textAppearance = "@style/TextAppearance.AppCompat.Display1"
                                android:textColor = "@android:color/white" />

                            <TextView
                                android:layout_width = "wrap_content"
                                android:layout_height = "wrap_content"
                                android:layout_marginTop = "16dp"
                                android:text = "EXPIRED REQ"
                                android:textAppearance = "@style/TextAppearance.AppCompat.Small"
                                android:textColor = "@android:color/white" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width = "match_parent"
                        android:layout_height = "wrap_content"
                        android:layout_marginStart = "16dp"
                        android:layout_marginTop = "24dp"
                        android:orientation = "horizontal">

                        <TextView
                            android:layout_width = "wrap_content"
                            android:layout_height = "wrap_content"
                            android:text = "NEW REQUESTS"
                            android:textAppearance = "@style/TextAppearance.AppCompat.Medium"
                            android:textColor = "@android:color/black"
                            android:textStyle = "bold" />

                        <TextView
                            android:id = "@+id/tv_date_filter"
                            android:layout_width = "0dp"
                            android:layout_height = "wrap_content"
                            android:layout_gravity = ""
                            android:layout_marginStart = "16dp"
                            android:layout_weight = "1"
                            android:gravity = "end"
                            android:paddingStart = "16dp"
                            android:paddingTop = "8dp"
                            android:paddingEnd = "16dp"
                            android:paddingBottom = "8dp"
                            android:text = "FROM ---- TO ----"
                            android:textColor = "@android:color/darker_gray"
                            android:visibility = "gone" />
                    </LinearLayout>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id = "@+id/rv_permits"
                    android:layout_width = "match_parent"
                    android:layout_height = "wrap_content"
                    android:layout_below = "@+id/ll_top_view"
                    android:layout_marginStart = "16dp"
                    android:layout_marginTop = "16dp"
                    android:layout_marginEnd = "16dp"
                    android:visibility = "gone"
                    tools:listitem = "@layout/view_permit_item" />

                <TextView
                    android:id = "@+id/tv_no_item"
                    android:layout_width = "match_parent"
                    android:layout_height = "wrap_content"
                    android:layout_below = "@+id/ll_top_view"
                    android:layout_alignParentBottom = "true"
                    android:layout_marginStart = "16dp"
                    android:layout_marginEnd = "16dp"
                    android:gravity = "center"
                    android:text = "NO MORE PERMITS"
                    tools:listitem = "@layout/view_permit_item" />

            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id = "@+id/efab_menu"
        style = "@style/extendedFab"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_gravity = "end|bottom|center"
        android:layout_margin = "@dimen/fab_margin"
        android:text = "MORE"
        android:textAllCaps = "false"
        android:textColor = "#fff9d815"
        android:textSize = "16.0sp"
        android:visibility = "visible"
        app:icon = "@drawable/ic_menu"
        app:iconPadding = "8.0dip" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>